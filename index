<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Suivi du Token Hyperliquid</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #111;
      color: #fff;
      text-align: center;
      padding: 20px;
    }
    .info {
      margin-top: 20px;
    }
    .logo {
      width: 100px;
      height: 100px;
    }
    .price, .mcap {
      font-size: 20px;
      margin-top: 10px;
    }
    #chart {
      margin-top: 20px;
      width: 100%;
      height: 300px;
    }
  </style>
</head>
<body>
  <h1>Suivi du Token Hyperliquid</h1>
  <img id="logo" class="logo" src="" alt="Logo Hyperliquid">
  <div class="info">
    <div class="price">Prix: <span id="price"></span></div>
    <div class="mcap">Market Cap: <span id="mcap"></span></div>
  </div>
  <canvas id="chart"></canvas>

  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    const tokenId = 'hyperliquid';
    const url = `https://api.coingecko.com/api/v3/coins/hyperliquid`;
    const urlChart = `https://api.coingecko.com/api/v3/coins/hyperliquid/market_chart?vs_currency=usd&days=1`;

    // Fonction pour récupérer les données du token
    async function fetchData() {
      try {
        const response = await fetch(url);
        const data = await response.json();

        // Afficher le logo
        document.getElementById('logo').src = data.image.large;

        // Afficher le prix et le market cap
        document.getElementById('price').textContent = '$' + data.market_data.current_price.usd;
        document.getElementById('mcap').textContent = '$' + data.market_data.market_cap.usd.toLocaleString();

        // Mettre à jour toutes les secondes
        setTimeout(fetchData, 1000);
      } catch (error) {
        console.error('Erreur lors de la récupération des données:', error);
      }
    }

    // Fonction pour récupérer les données du graphique
    async function fetchChartData() {
      try {
        const response = await fetch(urlChart);
        const data = await response.json();

        const prices = data.prices.map(item => item[1]);
        const times = data.prices.map(item => new Date(item[0]).toLocaleTimeString());

        // Création du graphique
        const ctx = document.getElementById('chart').getContext('2d');
        new Chart(ctx, {
          type: 'line',
          data: {
            labels: times,
            datasets: [{
              label: 'Prix Hyperliquid (USD)',
              data: prices,
              borderColor: '#00f',
              fill: false
            }]
          }
        });
      } catch (error) {
        console.error('Erreur lors de la récupération des données du graphique:', error);
      }
    }

    // Appeler les fonctions pour récupérer les données
    fetchData();
    fetchChartData();
  </script>
</body>
</html>
